<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="cb.cphuong.kanjn5.activity.KanjDetailActivity">
    <RelativeLayout
        android:layout_weight="1.3"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/image_kanj_detail"
            android:gravity="center|bottom"
            android:layerType="software"
            android:layout_gravity="center"
            android:layout_centerInParent="true"
            android:layout_width="200dp"
            android:layout_height="200dp" />
        <com.github.badoualy.kanjistroke.KanjiStrokeView
            android:layout_centerInParent="true"
            android:id="@+id/view_stroke"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/tv_vietnam_detail"
            android:layout_alignParentBottom="true"
            android:text="Kim"
            android:textSize="20dp"
            android:gravity="center|bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rcv_example"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v7.widget.RecyclerView>

    </LinearLayout>


</LinearLayout>
